.side-bar
  - if user_signed_in?
    - if content_for?(:side_bar)
      = yield :side_bar
  - else
    .side-bar-wrapper
      .side-bar-sign-in
        .h2 Log In
        = form_for(:user, url: session_path(:user)) do |f|
          .field
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true
          .field
            = f.label :password
            %br/
            = f.password_field :password, autocomplete: "off"
            - if Devise.mappings[:user].rememberable?
              .field
                = f.check_box :remember_me
                = f.label :remember_me
          .actions
            = f.submit "Log in", class: 'btn btn-default'
      .side-bar-register
        %h2 Register
        = form_for(:user, url: registration_path(:user)) do |f|
          .field
            = f.label :name
            %br/
            = f.text_field :name, autofocus: true
          .field
            = f.label :email
            %br/
            = f.email_field :email
          .field
            = f.label :password
            - if @validatable
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off"
          .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off"
          .actions
            = f.submit "Register", class: 'btn btn-default'
    %hr
    %p.register-question Not a member yet?
    .btn.btn-default.side-bar-register-button Register
