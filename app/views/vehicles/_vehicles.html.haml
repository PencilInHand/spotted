- if vehicles.any?
  .row
    - vehicles.each do |vehicle|
      .col.s12.m6.l4
        .card
          .card-image
          .card-content
          .card-action
            = link_to user_vehicle_path(user_id: user.id, id: vehicle.id) do
              - if vehicle.edmunds_json
                #{vehicle.edmunds_json['make']['name'].capitalize} #{vehicle.edmunds_json['model']['name'].capitalize}
              - else
                #{vehicle.vin}
  .row
    .col.s12.m6.l4
      %p{style: 'font-family: "OpenSans-Bold", sans-serif;'}
        #{link_to 'Add vehicle', new_user_vehicle_path(user_id: user.id), class: 'btn'}

- else
  .row
    .col.s4.offset-s4.center-align
      %p{style: 'font-family: "OpenSans-Bold", sans-serif;'}
        No vehicles! #{link_to 'Add one?', new_user_vehicle_path(user_id: user.id)}
